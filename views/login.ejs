<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/login.css" />
    <title>Login</title>
  </head>
  <body>
    <div class="nav-bar">
      <h1 class="logo-name">Two-Factor Auth</h1>
      <button class="reg-btn">
        <a href="/register" class="link">Register</a>
      </button>
    </div>
    <div class="wrapper">
      <h1 class="h1-login">LOGIN</h1>
      <div class="container">
        <% if(errorArray.length != 0){ %>
        <div class="error-div">
          <% errorArray.forEach((error) => { %>
          <ul>
            <li><%= error %></li>
          </ul>
          <% }) %>
        </div>
        <% }%> <% if(successMessage){ %>
        <div class="msg" id="success">
          <p><%= successMessage %></p>
        </div>
        <% } %> <% if(errorMessage){ %>
        <div class="msg" id="error">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
        <form class="form" action="/login" method="post">
          <div class="combine">
            <div class="div1">
              <label>Enter your Email</label>
              <input
                type="text"
                class="textBox"
                id="email"
                name="email"
                placeholder="abc@example.com"
              />
            </div>
            <div class="div2">
              <label>Enter your Password</label>
              <input
                type="password"
                class="textBox"
                id="password"
                name="password"
                placeholder="password"
              />
            </div>
            <a href="/forgotpassword" class="link">Forgot your password?</a>
          </div>
          <button type="submit" id="loginBtn">LOGIN</button>
        </form>
      </div>
    </div>
  </body>
</html>
